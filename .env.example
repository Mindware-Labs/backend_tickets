# Database
DATABASE_URL='postgresql://user:password@host:port/database?sslmode=require'

# Server
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secure-secret-key-change-this
JWT_EXPIRES_IN=7d

# Aircall Integration
AIRCALL_API_ID=your-aircall-api-id
AIRCALL_API_TOKEN=your-aircall-api-token
AIRCALL_WEBHOOK_TOKEN=your-aircall-webhook-token

# AWS S3
AWS_REGION=us-east-2
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Email (Brevo/Sendinblue)
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=2525
EMAIL_USER=your-email-user
EMAIL_PASSWORD="your-email-password"
EMAIL_FROM="Your App Name <noreply@yourdomain.com>"
BREVO_API_KEY=your-brevo-api-key

# Frontend
FRONTEND_URL=http://localhost:3000
